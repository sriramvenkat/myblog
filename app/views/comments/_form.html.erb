<%= form_for @comment, :url => {:action => :create, :id => @article.id} do |f| %>
  
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>

  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
